@page "/enrollments"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using Microsoft.AspNetCore.Authorization
@using SIMS.Data
@attribute [Authorize(Roles = "Admin")]
@implements IAsyncDisposable
@inject IDbContextFactory<ApplicationDbContext> DbFactory

<PageTitle>Enrollments</PageTitle>

<div class="container-fluid p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0"><i class="bi bi-people text-primary"></i> Course Enrollments</h1>
        <a href="enrollments/assign" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Assign Students</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <QuickGrid Class="table table-hover" Items="CourseEnrollments">
                <PropertyColumn Title="Course" Property="c => c.Name" />
                <PropertyColumn Title="Subject" Property="c => c.Subject.Name" />
                <PropertyColumn Title="Semester" Property="c => c.Semester.Name" />
                <PropertyColumn Title="Lecturer" Property="c => c.Lecture.Name" />
                <PropertyColumn Title="Students" Property="c => c.StudentCount" />
                
                <TemplateColumn Title="Actions" Context="course">
                    <a href="@($"enrollments/assign-students?courseId={course.Id}")" class="btn btn-sm btn-primary">
                        <i class="bi bi-person-plus"></i> Assign Students
                    </a>
                </TemplateColumn>
            </QuickGrid>
        </div>
    </div>
</div>

@code {
    private ApplicationDbContext context = default!;
    private IQueryable<CourseEnrollmentViewModel> CourseEnrollments = default!;

    protected override async Task OnInitializedAsync()
    {
        context = DbFactory.CreateDbContext();
        
        var courses = await context.Courses
            .Include(c => c.Subject)
            .Include(c => c.Semester)
            .Include(c => c.Lecture)
            .ToListAsync();

        var enrollmentCounts = await context.Enrollments
            .GroupBy(e => e.CourseId)
            .Select(g => new { CourseId = g.Key, Count = g.Count() })
            .ToDictionaryAsync(x => x.CourseId, x => x.Count);

        var courseList = courses.Select(c => new CourseEnrollmentViewModel
        {
            Id = c.Id,
            Name = c.Name,
            Subject = c.Subject,
            Semester = c.Semester,
            Lecture = c.Lecture,
            StudentCount = enrollmentCounts.ContainsKey(c.Id) ? enrollmentCounts[c.Id] : 0
        }).ToList();

        CourseEnrollments = courseList.AsQueryable();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();

    public class CourseEnrollmentViewModel
    {
        public int Id { get; set; }
        public string Name { get; set; } = "";
        public Subject Subject { get; set; } = null!;
        public Semester Semester { get; set; } = null!;
        public ApplicationUser Lecture { get; set; } = null!;
        public int StudentCount { get; set; }
    }
}

