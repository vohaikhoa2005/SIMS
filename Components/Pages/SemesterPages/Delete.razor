@page "/semesters/delete"
@using Microsoft.EntityFrameworkCore
@using SIMS.Data
@inject IDbContextFactory<SIMS.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Semester</h2>
    <hr />
    @if (semester is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@semester.Name</dd>
        </dl>
        <EditForm method="post" Model="semester" OnValidSubmit="DeleteSemester" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(semester is null)">Delete</button> |
            <a href="/semesters">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Semester? semester;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        semester = await context.Semesters.FirstOrDefaultAsync(m => m.Id == Id);

        if (semester is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteSemester()
    {
        using var context = DbFactory.CreateDbContext();
        context.Semesters.Remove(semester!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/semesters");
    }
}
